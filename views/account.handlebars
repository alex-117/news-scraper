<div>
    <h1>Settings</h1>

    <h3>Your Comments:</h3>
    {{#each Comment}}
    
    {{#if_equal this.author ../currentUser.username}}
    
        <p>{{this.text}}</p>
        
        <form action="/comment/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>
    
    {{/if_equal}}
    
    {{/each}}
</div>